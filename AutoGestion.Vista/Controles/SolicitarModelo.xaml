<UserControl x:Class="AutoGestion.Vista.Controles.SolicitarModelo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20">
        <TextBlock Text="Modelo a buscar:"/>
        <TextBox x:Name="txtModelo" Margin="0,5"/>

        <Button Content="Buscar" Click="Buscar_Click" Margin="0,10"/>

        <TextBlock Text="Resultados:" FontWeight="Bold" Margin="0,10"/>
        <ListBox x:Name="lstResultados" DisplayMemberPath="Dominio"/>
    </StackPanel>
</UserControl>
