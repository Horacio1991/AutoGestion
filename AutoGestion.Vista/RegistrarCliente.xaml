<Window x:Class="AutoGestion.Vista.RegistrarCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Cliente" Height="300" Width="400">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="DNI"/>
        <TextBox x:Name="txtDni" Margin="0,5"/>

        <TextBlock Text="Nombre"/>
        <TextBox x:Name="txtNombre" Margin="0,5"/>

        <TextBlock Text="Apellido"/>
        <TextBox x:Name="txtApellido" Margin="0,5"/>

        <TextBlock Text="Contacto"/>
        <TextBox x:Name="txtContacto" Margin="0,5"/>

        <Button Content="Registrar" Margin="0,10" Click="Registrar_Click"/>
    </StackPanel>
</Window>
